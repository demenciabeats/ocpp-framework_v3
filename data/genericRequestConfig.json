{
  "endpoint": "https://example.com/api/recurso",
  "method": "POST",
  "headers": {
    "Content-Type": "application/json"
  },
  "params": {
    "q": "test"
  },
  "auth": {
    "username": "user",
    "password": "pass"
  },
  "body": {                                         
    "campo1": "valor1",
    "campo2": 42
  },
  "timeout": 10000,
  "expectedResponse": {
    "status": 200,
    "body": {
      "result": "ok"
    }
  },
  "validationRules": {
    "rules": [
      { "jsonPath": "$.data.value", "operator": "equals", "expected": 123 }
    ]
  },
  "requiresToken": true,
  "token": "Bearer abc123-token-ejemplo"
}